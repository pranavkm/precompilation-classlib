<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.0" />
    <ProjectReference Include="..\lib1\lib1.csproj" />
  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Tools" Version="2.0.0" />
  </ItemGroup>

  <Target Name="_RunPrecompileForClassLib" AfterTargets="Publish">
    <MSBuild
      Projects="../lib1/lib1.csproj"
      Targets="MvcRazorPrecompile"
      Properties="TargetFramework=$(TargetFramework);Configuration=$(Configuration);MvcRazorOutputPath=$(MSBuildProjectDirectory)\$(PublishDir)" />
  </Target>

</Project>
